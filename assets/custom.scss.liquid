@font-face {
    font-family: 'Candelion';
    src: url('Candelionregular.otf');
    src: url('Candelionregular.ttf') format('truetype');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Candelion';
    src: url('Candelionbold.otf');
    src: url('Candelionbold.ttf') format('truetype');
    font-weight: bold;
    font-style: normal;
}

$color-black: #333132;
$color-border:#8D7A54;
$font:'Century Gothic';
$font-alt:'Candelion';

.btn__style {
    font-family: 'Century Gothic';
    color: #333132;
    background-image: linear-gradient(#9b8e68, #9b8e68), linear-gradient(#9b8e68, #9b8e68), linear-gradient(#9b8e68, #9b8e68), linear-gradient(#9b8e68, #9b8e68);
    background-repeat: no-repeat;
    background-size: 8px 1px;
    background-position: top left, top right, bottom left, bottom right;
    border: solid #9B8E68;
    border-top-width: medium;
    border-right-width: medium;
    border-bottom-width: medium;
    border-left-width: medium;
    border-width: 0 1px;
    background-color: transparent;
    transition: all 0.3s ease;
    text-transform: capitalize;
    padding: 5px 20px;
    display: inline-block;
}

.divider-line {
    content: "";
    position: absolute;
    left: 15px;
    bottom: 0;
    width: 9600px;
    right: 100%;
    background: #9B8E68;
    height: 2px;
}

.divider-line-left {
    content: "";
    position: absolute;
    left: inherit;
    bottom: 0;
    width: 1510px;
    right: 0%;
    background: #9B8E68;
    height: 2px;
}

