            font-size: 45px;
            color: $color-black;
            font-family: $font-alt;
            text-shadow: none;
        }
    }

    .product-card {
        border: none !important;

        .product-card__image-wrapper>div {
            padding: 0 !important;

            img {
                position: relative;
                width: 170px;
            }
        }

        .h4.grid-view-item__title.product-card__title {
            font-size: 15px;
            font-weight: 500;
        }

        span.price-item.price-item--regular {
            font-size: 19px;
        }

        .price__regular {
            margin: 0 !important;
        }

        .grid-view-item__image {
            width: 170px;
        }
    }

    h2 {
        letter-spacing: normal;
    }

}


